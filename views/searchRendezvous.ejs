<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('./templates/header')%>
</head>

<body class="m-2 row justify-content-center">
    <div class="container m-2 row justify-content-center">
        <div class="card-header">
            <%- include('./templates/navbar')%>
        </div>
        <br>
            <div class="row">
                <div class="col-5">
                    <br>
                    <div class="card mb-3 col" style="border-left: 100px; border-right: 100px;">
                        <div class="row">
                            <div class="col-12">
                                <div class="card-body">
                                    <h5 class="card-title"
                                        style="color: rgb(224, 32, 32); font-size: 36px; text-align: center;"><img
                                            src="/images/veterinario1.png" class="img-fluid rounded-start"
                                            alt="Icono spa"> Informaci√≥n de citas</h5>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class ="d-grid gap  col-10">
                                <a class="btn btn-success" href="/createRendezvous" role="button">Nueva cita</a>
                                 <br>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    <div class="row">
        <%if(rendezvous.length){%>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col"># Cita</th>
                        <th scope="col">Nombre cliente</th>
                        <th scope="col">Nombre mascota</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Hora</th>
                        <th scope="col">Servicio cita</th>
                        <th scope="col">Cancelar cita</th>
                    </tr>
                </thead>
                <tbody>
                    <% rendezvous.forEach(rendezvous=> { %>
                        <tr>
                            <td><%= rendezvous.idRendezvous %></td>
                            <td><%= rendezvous.idCustomer %></td>
                            <td><%= rendezvous.namePet%></td>
                            <td><%= rendezvous.date %></td>
                            <td><%= rendezvous.time %></td>
                            <td><%= rendezvous.service %></td>
                            <td>
                                <a href='/delete/<%= rendezvous.idRendezvous %>' class="btn btn-danger"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-x-fill" viewBox="0 0 16 16">
                                    <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM6.854 7.146 8 8.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 9l1.147 1.146a.5.5 0 0 1-.708.708L8 9.707l-1.146 1.147a.5.5 0 0 1-.708-.708L7.293 9 6.146 7.854a.5.5 0 1 1 .708-.708z"/>
                                  </svg>
                                  </svg></a>
                            </td>
                        </tr>
                        <%})%>  
                </tbody>
            </table>
            <%}else{%>
                <br>
                <h4  style="color: rgb(187, 0, 0); text-align: left;">No hay citas creadas</h4>
                <br>
                <%}%>
    </div>
    <%- include('./templates/footer')%>
</body>

</html>